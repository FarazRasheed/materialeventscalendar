<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.faraz.materialeventscalendar.MainActivity">

    <com.faraz.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:layout_weight="1"
        android:visibility="visible"
        app:previousButtonSrc="@drawable/ic_baseline_arrow_back_ios_24"
        app:forwardButtonSrc="@drawable/ic_baseline_arrow_forward_ios_24"
        app:todayLabelColor="#e5310e"
        app:daysLabelsColor="#3d3d3d"
        android:background="#f5f5f5"
        app:selectionLabelColor="#ffffff"
        />
    <Button
        android:id="@+id/setDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:text="Set random date" />

</LinearLayout>